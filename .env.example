# ============================================
# ShopEase Docker Compose - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_ROOT_PASSWORD=your_secure_root_password_here
DB_NAME=shopease
DB_USER=shopease_user
DB_PASSWORD=your_secure_database_password_here
DB_PORT=3306

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
BACKEND_PORT=4000
BACKEND_BASE_URL=http://localhost:4000
FRONTEND_PORT=5173
DEBUG=false

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable file logging (useful for production)
ENABLE_FILE_LOGGING=true

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins (required for admin dashboard / API calls)
# Add your production admin domain so the browser allows API requests.
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://shopease-admi.me,https://shopease-admi.me,http://www.shopease-admi.me,https://www.shopease-admi.me,http://24.199.101.185

# ============================================
# BAKONG PAYMENT (OPTIONAL)
# ============================================
BAKONG_ACCESS_TOKEN=
BAKONG_MERCHANT_ID=
BAKONG_MERCHANT_NAME=ShopEase
BAKONG_MERCHANT_CITY=Phnom Penh
BAKONG_BASE_URL=https://api-bakong.nbc.gov.kh/v1

# ============================================
# ORDER CONFIGURATION
# ============================================
ORDER_EXPIRY_MINUTES=15

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_GENERAL=100
RATE_LIMIT_PAYMENT_STATUS=20
RATE_LIMIT_ORDER_CREATION=5
RATE_LIMIT_AUTH=10
