{
  "name": "shopease-backend",
  "version": "1.0.0",
  "description": "ShopEase Backend API - Express server with MySQL, JWT auth, Firebase integration, and Bakong KHQR payments",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init_db.js",
    "reset-db": "node scripts/reset_db.js",
    "list-users": "node scripts/list_users.js",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "prisma:generate": "prisma generate",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules node --inspect-brk node_modules/.bin/jest --runInBand",
    "perf": "node test-performance.js",
    "perf:watch": "watch 'npm run perf' src"
  },
  "keywords": [
    "ecommerce",
    "api",
    "express",
    "mysql",
    "jwt",
    "firebase",
    "bakong"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@vonage/server-sdk": "^3.25.1",
    "axios": "^1.13.2",
    "bakong-khqr": "^1.0.20",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^13.6.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "prisma": "^5.22.0",
    "twilio": "^5.10.7",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2"
  }
}
