datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  passwordHash  String
  phoneNumber   String?  @unique
  isPhoneVerified Boolean @default(false)
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  products      Product[] @relation("ProductUpdatedBy")

  @@index([role])
  @@index([createdAt])
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  description String?
  price      Decimal  @db.Decimal(10, 2)
  stock      Int      @default(0)
  status     ProductStatus @default(ACTIVE)
  images     Json?
  category   String?
  offer      String?
  color      String?
  updatedBy  User?    @relation("ProductUpdatedBy", fields: [updatedById], references: [id])
  updatedById Int?
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@index([status])
  @@index([category])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([updatedById])
}

enum Role {
  USER
  ADMIN
}

enum ProductStatus {
  ACTIVE
  ARCHIVED
}